<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    tools:context=".DaftarActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/kotak_kanan"
        android:text="DAFTAR"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/aladin"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxBackgroundMode="outline"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        app:startIconDrawable="@drawable/ic_username"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Nama"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_email"
        android:layout_marginHorizontal="30dp"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Email"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxBackgroundMode="outline"
        android:layout_marginHorizontal="30dp"
        app:startIconDrawable="@drawable/ic_alamat"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/et_alamat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Kota/Daerah"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_round_lock_24"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        app:boxBackgroundColor="@color/white"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Password"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxBackgroundMode="outline"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        app:startIconDrawable="@drawable/ic_round_lock_24"
        app:boxBackgroundColor="@color/white"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/et_konfirpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Konfirmasi Password"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_daftar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="120dp"
        android:text="DAFTAR"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparan"
        android:text="LOGIN"
        android:textColor="@color/warna_dasar"
        android:textStyle="bold"/>

</LinearLayout>