<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/listNomor"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="1000"
        android:gravity="center"
        android:textColor="@color/warna_dasar"
        android:textSize="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvfp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="12dp"
        app:cardCornerRadius="50dp"
        android:layout_toEndOf="@+id/listNomor"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:id="@+id/foto_akun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:src="@drawable/profile_male"
            tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/listNama"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/cvfp"
        android:layout_marginLeft="10dp"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/listSkor"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="20dp" />


</RelativeLayout>